<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/NiyoActionBarStyle</item>
        <item name="android:textViewStyle">@style/Text</item>
    </style>
    <style name="NiyoActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/mainColor</item>
        <item name="android:textColor">@color/appColor</item>
    </style>
    <style name="Layout">
        <item name="android:background">@color/appColor</item>
    </style>
    <style name="Text">
        <item name="android:textColor">@color/mainColor</item>
    </style>

</resources>
