<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/NiyoActionBarStyle</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="android:buttonStyle">@style/NiyoButton</item>
        <item name="android:windowBackground">@color/appColor</item>
    </style>
    <style name="NiyoActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/mainColor</item>
        <item name="android:textColor">@color/appColor</item>
    </style>
    <style name="Layout">
        <item name="android:background">@color/appColor</item>
    </style>
    <style name="Text">
        <item name="android:textColor">@color/mainColor</item>
    </style>
    <style name="NiyoButton" parent="android:Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@color/mainColor</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
